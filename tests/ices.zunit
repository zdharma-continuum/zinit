# #!/usr/bin/env zunit
#
#

@setup {
  zinit default-ice from'gh-r' nocompile
}

@teardown {
  zinit default-ice --clear
}

@test 'bat' {
  run zinit sbin"**/bat -> bat" for @sharkdp/bat
  assert $state equals 0

  local bat="$ZPFX/bin/bat"
  assert "$bat" is_file
  assert "$bat" is_executable

  $bat --version
  assert $state equals 0
}

