@test 'fx' {
  run zinit sbin'**/fx* -> fx' for @antonmedv/fx
  assert $state equals 0

  local fx="$ZPFX/bin/fx"
  assert "$fx" is_file
  assert "$fx" is_executable

  # use fx because fx has no flags/options (e.g., --version)
  echo '{"key": "value"}' | $fx .key
  assert $state  equals 0
  assert $output same_as 'value'
}

